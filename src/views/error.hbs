<div class="error-container">
    <h1>Error</h1>
    <div class="error-message">
        {{#if error}}
            <p>{{error}}</p>
        {{else}}
            <p>Ha ocurrido un error inesperado</p>
        {{/if}}
    </div>
    <a href="/" class="btn-home">Volver al inicio</a>
</div>

<style>
    .error-container {
        text-align: center;
        padding: 2rem;
        max-width: 600px;
        margin: 2rem auto;
    }
    .error-message {
        background-color: #fff3f3;
        border: 1px solid #ffcdd2;
        padding: 1rem;
        border-radius: 4px;
        margin: 1rem 0;
    }
    .btn-home {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }
</style> 