{{!-- Contenedor principal del formulario de registro --}}
<div class='register-container'>
    {{!-- Título del formulario --}}
    <h1>Registro</h1>
    {{!-- Formulario de registro con ID para JavaScript --}}
    <form id='registerForm' class='register-form'>
        {{!-- Campo para el nombre --}}
        <div class='form-group'>
            <label for='first_name'>Nombre:</label>
            {{!-- Input requerido para el nombre --}}
            <input type='text' id='first_name' name='first_name' required />
        </div>

        {{!-- Campo para el apellido --}}
        <div class='form-group'>
            <label for='last_name'>Apellido:</label>
            {{!-- Input requerido para el apellido --}}
            <input type='text' id='last_name' name='last_name' required />
        </div>

        {{!-- Campo para el email --}}
        <div class='form-group'>
            <label for='email'>Email:</label>
            {{!-- Input tipo email requerido --}}
            <input type='email' id='email' name='email' required />
        </div>

        {{!-- Campo para la edad --}}
        <div class='form-group'>
            <label for='age'>Edad:</label>
            {{!-- Input numérico con valor mínimo de 1 --}}
            <input type='number' id='age' name='age' required min='1' />
        </div>

        {{!-- Campo para la contraseña --}}
        <div class='form-group'>
            <label for='password'>Contraseña:</label>
            {{!-- Input tipo password requerido --}}
            <input type='password' id='password' name='password' required />
        </div>

        {{!-- Botón para enviar el formulario --}}
        <button type='submit' class='btn-submit'>Registrarse</button>
    </form>

    {{!-- Enlace para redireccionar al login si ya tiene cuenta --}}
    <p>¿Ya tienes cuenta? <a href='/login'>Inicia sesión aquí</a></p>
</div>

{{!-- Vinculación de archivos externos --}}
{{!-- Archivo CSS para los estilos del registro --}}
<link rel='stylesheet' href='/css/register.css' />
{{!-- Archivo JavaScript con la lógica del registro (defer para que cargue después del HTML) --}}
<script src='/js/register.js' defer></script>