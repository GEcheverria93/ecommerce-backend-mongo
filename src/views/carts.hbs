<div id='cart-container'>
    <h1>Lista de Carritos</h1>
    <!-- TÃ­tulo de la lista de carritos -->
    <div id='cart-list'>
        {{#each carts}}
            <div class='cart-card'>
                <h2>Carrito ID: {{_id}}</h2>
                <ul>
                    {{#each products}}
                        <li>
                            Producto:
                            {{this.product.title}}
                            - Cantidad:
                            {{this.quantity}}
                            - Precio: ${{this.product.price}}
                        </li>
                    {{/each}}
                </ul>
                <div class='total-price'>
                    Total: ${{calculateTotal products}}
                </div>
                <button class='btn-buy' data-cart-id='{{_id}}'>Comprar</button>
                <button class='btn-clear' data-cart-id='{{_id}}'>Limpiar carrito</button>
            </div>
        {{/each}}
    </div>
    <div id='pagination'>
        {{#if (gt currentPage 1)}}
            <a href='/carts?page={{dec currentPage}}&limit=10'>Anterior</a>
        {{/if}}
        {{#if (lt currentPage totalPages)}}
            <a href='/carts?page={{inc currentPage}}&limit=10'>Siguiente</a>
        {{/if}}
    </div>
</div>

<link rel='stylesheet' href='/css/cart.css' />
<script src='/js/cart.js' defer></script>