{{!-- Contenedor principal del formulario de login --}}
<div class='login-container'>
    {{!-- Título del formulario --}}
    <h1>Iniciar Sesión</h1>

    {{!-- Formulario de login con ID para JavaScript --}}
    <form id='loginForm' class='login-form'>
        {{!-- Campo para el email --}}
        <div class='form-group'>
            <label for='email'>Email:</label>
            {{!-- Input tipo email con validación requerida --}}
            <input type='email' id='email' name='email' required />
        </div>

        {{!-- Campo para la contraseña --}}
        <div class='form-group'>
            <label for='password'>Contraseña:</label>
            {{!-- Input tipo password con validación requerida --}}
            <input type='password' id='password' name='password' required />
        </div>

        {{!-- Botón para enviar el formulario --}}
        <button type='submit' class='btn-submit'>Iniciar Sesión</button>
    </form>

    {{!-- Enlace para redireccionar al registro si no tiene cuenta --}}
    <p>¿No tienes cuenta? <a href='/register'>Regístrate aquí</a></p>
</div>

{{!-- Vinculación de archivos externos --}}
{{!-- Archivo CSS para los estilos del login --}}
<link rel='stylesheet' href='/css/login.css' />
{{!-- Archivo JavaScript con la lógica del login (defer para que cargue después del HTML) --}}
<script src='/js/login.js' defer></script>